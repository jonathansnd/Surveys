<div <%= lineitem %> <% if (lineitem.id) { %> id="<%= lineitem.id %>" <% } %> class ="lineitem parent <%= lineitem.type %> <%= lineitem.subType %> ui-corner-all" data-type="<%= lineitem.type %>" data-subType="<%= lineitem.subType %>">
	<span class="handle sexybutton sexysimple sexysilver hide-in-tabs"><%= lineitem.displayName %></span>
	<span class="ui-icon ui-icon-triangle-1-s"></span>
	<span class="ui-icon ui-icon-grip-dotted-vertical"></span>

	<span class="ui-icon ui-icon-trash"></span>
	<div class="header hideable"><%= lineitem.displayName %></div>
	<form class="lineitem-form" onsubmit="return false;">
		<input type="hidden" name="displayName" value="<%= lineitem.displayName %>" />
		<input type="hidden" name="type" value="<%= lineitem.type %>" />
		<input type="hidden" name="subType" value="<%= lineitem.subType %>" />
		<input type="hidden" name="parentId" value="<%= lineitem.parentId %>" />
		<input type="hidden" name="parentType" value="<%= lineitem.parentType %>" />

		<table>
			<tr>
				<td class="td-label" title="Logic used for displaying this section">Display Logic :</span></td>
				<td class="td-input">

					<input type="text" name="displayLogic" value="<%= lineitem.displayLogic %>" class="ui-corner-all"/></td>
				</td>
			</tr>
		</table>
	</form>

	<div class="content-group hideable">	
		<span class="ui-icon ui-icon-triangle-1-s collapse"></span>
		<span class="content-label">Conditions :</span>
		<div class="quick-add">
	        <span class="ui-icon ui-icon-circle-plus quick-add-icon"></span>
	        <div class="quick-add-buttons ui-corner-all">
	            <button class="sexybutton sexymedium sexysimple sexysilver" data-type="displayCondition" data-subType="condition">Condition</button>
	        </div>
		</div>
		<div class="empty-message hideable <% if (lineitem.child) { %>stay-hidden<% } %>">To add display conditions to your logic, drag and drop them here </div>		
		<div class="displayConditions content hideable ui-corner-all <% if (lineitem.child) { %>hideBorder<% } %>">
			<% if (lineitem.child) {%>
				<% var childLineitem = Lineitem.findOne({id:lineitem.child}) %>
				<%= $.View('//surveybuilder/views/lineitem/show', {lineitem:childLineitem}) %>
			<% } %>
		</div>
	</div>

</div>